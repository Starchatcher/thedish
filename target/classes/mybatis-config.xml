<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>
    
    <typeAliases>
        <typeAlias type="com.thedish.user.model.vo.User" alias="User"/>
        <typeAlias type="com.thedish.user.model.vo.VerificationCode" alias="VerificationCode"/>
    </typeAliases>
</configuration>
<insert id="insertTermsAgreement" parameterType="string">
    INSERT INTO terms_agreements (
        id, user_id, terms_service, terms_privacy, agreed_at
    ) VALUES (
        terms_seq.NEXTVAL, #{userId}, 1, 1, SYSDATE
    )
</insert>